{
    "manifest_version": 3,
    "name" : "Smart Study Companion",
    "version" : "1.0.0",
    "description": "AI-powered study companion for JEE preparation with custom test builder",

    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],

    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },

    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    }
}